/* pages/equipmentList/index.wxss */

.searchContainer {
    height: 100rpx;
}

.radio-group {
    font-size: 30rpx;
    float: left;
    height: 100rpx;
    line-height: 100rpx;
    margin-top: 20rpx;
}

.sweepCode {
    float: right;
    margin-right: 30rpx;
    margin-top: 30rpx;
    height: 40px;
    line-height: 40px;
    border-radius: 5px;
    width: 200rpx;
    text-align: center;
    border: 1px solid #797979
}

.table {
    border-top: 1px solid #000;
    border-left: 1px solid #000;
    margin-top: 20px;
    box-sizing: border-box
}

.tr {
    display: flex;
    width: 100%;
    justify-content: center;
    height: 70rpx;
    align-items: center;
}

.td {
    width: 40%;
    height: 70rpx;
    line-height: 70rpx;
    justify-content: center;
    text-align: center;
    border-bottom: 1px solid #000;
    border-right: 1px solid #000;
    overflow: hidden;
    text-overflow: ellipsis;
    white-space: nowrap;
}

.bg-w {
    background: snow;
}

.bg-w>view {
    background: #fff;
    border-top: 1px solid #000;
}

.bg-g {
    /* background: #CBCBCB; */
    color: red;
}

.th {
    width: 40%;
    justify-content: center;
    display: flex;
    height: 70rpx;
    align-items: center;
    border-bottom: 1px solid #000;
    border-right: 1px solid #000;
}