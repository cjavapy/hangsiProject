/* pages/repairDetail/index.wxss */

.machInfo {
    display: flex;
    height: 400rpx;
    flex-direction: row;
}

.machImg {
    height: 400rpx;
    width: 290rpx;
    margin-left: 10rpx;
}

.machDesc {
    display: block;
    height: 400rpx;
    width: 430rpx;
    font-size: 16px;
    margin-left: 5px;
}

.machDesc view {
    line-height: 57rpx;
    height: 57rpx;
    font-weight: blod;
    overflow: hidden;
    text-overflow: ellipsis;
    white-space: nowrap;
}

image {
    height: 360rpx;
    width: 290rpx;
}

.repairReason {
    width: 100%;
    height: 280rpx;
    border-top: 1px solid #000;
    border-bottom: 1px solid #000
}

.submitDesc {
    width: 100%;
    height: 280rpx;
    border-bottom: 1px solid #000;
    padding: 10rpx 20rpx;
}

.submitDesc label {
    margin-left: 30rpx;
}

.submitDesc textarea {
    width: 690rpx;
    height: 220rpx;
    margin-left: 30rpx;
    border: 1px solid #A9A9A9
}

.submitBtn {
    width: 100%;
    height: 80rpx;
}

.submitBtn>view {
    width: 60%;
    height: 80rpx;
    line-height: 80rpx;
    border-radius: 5px;
    text-align: center;
    font-weight: 400;
    margin-left: 20%;
    margin-top: 40rpx;
    background: #00A4EA;
    color: #fff
}