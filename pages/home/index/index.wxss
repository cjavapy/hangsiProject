/* pages/home/index.wxss */

.userinfo {
    margin-bottom: 40rpx;
}

.userinfo image {
    display: block;
    width: 200rpx;
    height: 200rpx;
    border-radius: 50%;
}

.userinfo-nickname {
    display: block;
    line-height: 3;
    color: #333;
}

.text {
    margin-bottom: 80rpx;
}

.btn {
    width: 500rpx;
    font-size: 40rpx;
    color: #fff;
    line-height: 100rpx;
    border-radius: 10rpx;
    margin-bottom: 50rpx;
    margin-top: 40px;
    background: linear-gradient(60deg, #00a4ea, #7cc9ea);
    text-align: center;
}

.yellow {
    background: linear-gradient(60deg, #eabb00, #ecd783);
}

.green {
    background: linear-gradient(60deg, #00c633, #8cefa5);
}

.typeList {
    display: flex;
    flex-flow: row;
    width: 100%;
    margin-top: 40rpx;
}

.item {
    display: inline-block;
    width: 250rpx;
    text-align: center;
}

.circle {
    width: 150rpx;
    height: 150rpx;
    line-height: 150rpx;
    margin: 0 auto;
    border: 1px solid #909090;
    border-radius: 105rpx;
    text-align: center;
}

.userLeft {
    float: left;
    width: 300rpx;
    margin-left: 20rpx
}

.userRight {
    float: left;
    width: 430rpx;
}

.startInventory {
    border-radius: 5px;
}

.endInventory {
    border-radius: 5px;
    background: red;
    color: #fff;
}