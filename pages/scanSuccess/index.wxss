/* pages/scanSuccess/index.wxss */
.scanDetail{
  font-size:30rpx;
  background:#eee;
  color:#666;
  line-height: 3;
  padding:0 30rpx;
}
.forList{
  padding:0 30rpx;
}
.forList .forli{
  border-bottom:1px solid #eee;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  padding:20rpx 0;
  min-height:70rpx;
  align-items:center;
}
.forList .forli view{
  display: inline-block;
  width:200rpx;
}
.forList .forli text{
  font-size:30rpx;
  color:#999;
}
.forList .forli text.left{
  color:#333;
}
.forList .forli input{
  text-align: right;
  width:460rpx;
}
.bottomFix{
  width:750rpx;
  padding:30rpx;
  display: flex;
  position: fixed;
  bottom:0;
}
.bottomFix view{
  width:200rpx;
  margin:0 15rpx;
  background:#00a4ea;
  border-radius:10rpx;
  text-align: center;
  color:#fff;
  font-size:30rpx;
  line-height:3; 
}
.blackMoudel{
  background: rgba(0,0,0,.5);
  width:100%;
  height:100%;
  position: fixed;
  top:0;
  left:0;
}
.reportDetail{
  position: fixed;
  width:80%;
  top:40%;
  left:50%;
  transform:translate(-50%,-50%);
  background: #fff;
  padding:30rpx;
}
.bottomBtn{
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  margin-top:30rpx;
  padding:0 30rpx;
}
.bottomBtn view{
  display: inline-block;
  width:45%;
  font-size:30rpx;
  line-height:2.5;
  text-align: center;
  color:#fff;
  background:#00a4ea;
  border-radius:10rpx;
}
.bottomBtn view.left{
  background: #ccc;
}